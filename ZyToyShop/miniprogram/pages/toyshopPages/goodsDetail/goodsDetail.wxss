/* miniprogram/pages/toyshopPages/goodsDetail/goodsDetail.wxss */

.detail {
  height: calc(100% - 120rpx);
}

.d-swiper swiper {
  height: 800rpx;
}

.goods-container{
  display: flex;
  justify-content: space-between;  
  flex-wrap:wrap;
  box-sizing: content-box;
  padding: 24rpx;
}

.goods-box{
  height: 800rpx;
  overflow: hidden;
  margin-bottom: 24rpx;
}

.goods-box image{
   height: 800rpx;
}

.info-container {
  display: flex;  
  flex-direction: row;
  width: 100%;
  padding: 24rpx;
  background-color: white;
}

.item-description{
  padding:24rpx;
  background-color: white;
  margin-top: 12rpx;
}

.item-description-detail{
  padding-left:24rpx;
  padding-right:24rpx;
  padding-bottom: 24rpx;
  font-size: 32rpx;
  background-color: white;
}

.info-item-name{
  flex: 70%;
}

.info-item-price{
  flex: auto;
  color: red;
}


.info-ver{
  flex: 1;
}

.footer-container{
  height: 96rpx;
}

